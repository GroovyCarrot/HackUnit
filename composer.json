{
    "name": "hackpack/hackunit",
    "description": "An xUnit testing framework for Hack",
    "type": "library",
    "keywords": ["testing", "xunit", "hack", "hhvm", "hacklang"],
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Scaturro",
            "email": "scaturrob@gmail.com",
            "role": "Creator"
        },
        {
            "name": "Isaac Leinweber",
            "email": "brotchen@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability" : "dev",
    "require": {
        "kilahm/clio": "*",
        "hackpack/hack-class-scanner": "*"
    },
    "autoload": {
        "psr-4": {
            "HackPack\\HackUnit\\": "src/"
        },
        "files": [
            "src/Event/Listeners.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HackPack\\HackUnit\\Tests\\Fixtures\\": "test/Fixtures"
        }
    },
    "bin": ["bin/hackunit"],
    "require-dev": {
        "91carriage/phpunit-hhi": "^4.0@dev"
    }
}
